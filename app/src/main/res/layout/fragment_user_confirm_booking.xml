<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserConfirmBookingFragment">


    <TextView
        android:id="@+id/textViewConfirmVehicleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Type:             SEDAN"
        android:textSize="21sp"
        android:layout_marginTop="180dp"
         />

    <TextView
        android:id="@+id/textViewConfirmServiceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Type:             DEEP CLEAN"
        android:layout_marginTop="20dp"
        android:textSize="21sp"
        android:layout_below="@+id/textViewConfirmVehicleType"
        />

    <TextView
        android:id="@+id/textViewServiceCharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConfirmServiceType"
        android:layout_marginTop="20dp"
        android:text="Service Charges:       160 CAD"
        android:textSize="21sp"

        />

    <TextView
        android:id="@+id/textViewServiceTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewServiceCharges"
        android:layout_marginTop="20dp"
        android:text="Tax (13)%:                  20 CAD"
        android:textSize="21sp"

        />


    <EditText
        android:id="@+id/editTextAdditionalNotes"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/textViewServiceTax"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="left|top"
        android:hint="Additional Notes.."
        android:inputType="textMultiLine"
        android:textSize="15sp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonConfirmBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAdditionalNotes"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Confirm Booking"

        />

</RelativeLayout>